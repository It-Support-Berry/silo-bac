{% extends 'layout.html.twig' %}

{% block title %}validation{% endblock %}
    
{% block body %}
    <link rel="stylesheet" href="/assets/css/controle.css">
	
	{% block sidebar %}
        {{ parent() }}
    {% endblock %}

    {% block content %}

		<div class="content">

			<h1> Débuter / Clôturer un lot </h1>

			<main>
				
				<div class="secondDiv">

					<div class="text-center">
						{% for message in app.flashes('success') %}
							<div class="alert alert-danger"> {{ message }}</div>
						{% endfor %}
					</div>

					{{form_start(form)}}
							
						<aside>
							<div class="input-group">
								{{ form_label(form.silo) }}
								{{ form_widget(form.silo) }}
							</div>
						</aside>

						<aside>
							<div class="input-group">
								{{ form_label(form.cuve) }}
								{{ form_widget(form.cuve) }}
							</div>
						</aside>

						<aside>
							<div class="input-group">
								{{ form_label(form.atelier, 'Responsable') }}
								{{ form_widget(form.atelier) }}
							</div>
						</aside>

						<aside>
							<div class="input-group">
								{{ form_label(form.codejde, 'Code JDE') }}
								{{ form_widget(form.codejde) }}
							</div>
						</aside>

						<aside>
							<div class="input-group">
								{{ form_label(form.matiere, 'Matière') }}
								{{ form_widget(form.matiere) }}
							</div>
						</aside>

						<aside>
							<div class="input-group">
								{{ form_label(form.date) }}
								{{ form_widget(form.date) }}
							</div>
						</aside>

						<aside>
							<div class="input-group">
								{{ form_label(form.lot, 'N° Lot') }}
								{{ form_widget(form.lot) }}
							</div>
						</aside>

						<aside class="form-check form-switch">
							<div class="row">
								<div class="col" id="statut">
									{% if form.vars.value.etatdebut %}
										{{ form_widget(form.etatdebut, {'disabled': true}) }}
										<input type="hidden" name="{{ form.etatdebut.vars.full_name }}" value="{{ form.etatdebut.vars.value }}">
									{% else %}
										{{ form_widget(form.etatdebut) }}
									{% endif %}
								</div>
								<div class="col" id="statut">
									{{ form_widget(form.etatfin) }}
								</div>
							</div>
						</aside>				

						<div class="bouton">
							<a class="btn btn-secondary" href=" {{ path('app_silos') }}">Retour</a>
							<button type="submit" class="btn btn-secondary" name="register" onclick="return confirm('Confirmez-vous la validation')">Valider</button>
						</div>

					{{form_end(form)}} 
				</div>
			</main>

		</div>

	{% endblock %}
	
{% endblock %}
